    <div class="container-fluid">
        <nav class="navbar navbar-light bg-light">
            <span class="navbar-brand mb-0 h1">Distributor Home</span>
        </nav>
        @using (Html.BeginForm(""))
        {
            <div class="row">

                <div class="col-md-6 mx-auto border-secondary">

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.DistributorName, new
                   { @class="col-form-label col-lg-3"})
                        <div class="col-lg-9">

                            @Html.TextBoxFor(temp => temp.DistributorName, new
                       { @class= "form-control col-lg-9 distributorname", placeholder="Distributorname"})
                            @Html.ValidationMessageFor(temp => temp.DistributorName)
                        </div>

                    </div>

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.DistributorMobile, new
                   { @class="col-form-label col-lg-3"})

                        <div class="col-lg-9">
                            @Html.TextBoxFor(temp => temp.DistributorMobile, new
                       { @class= "form-control col-lg-9 distributorMobile", placeholder = "DistributorMobile" })
                            @Html.ValidationMessageFor(temp => temp.DistributorMobile)
                        </div>

                    </div>

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.Email, new
                    { @class="col-form-label col-lg-3"})

                        <div class="col-lg-9">
                            @Html.TextBoxFor(temp => temp.Email, new
                       { @class= "form-control col-lg-9 distributorEmail", placeholder = "DistributorEmail" })
                            @Html.ValidationMessageFor(temp => temp.Email)
                        </div>

                    </div>

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.Password, new
                    { @class="col-form-label col-lg-3"})

                        <div class="col-lg-9">
                            @Html.TextBoxFor(temp => temp.Password, new
                       { @class= "form-control col-lg-9 distributorPassword", placeholder = "DistributorPassword" })
                            @Html.ValidationMessageFor(temp => temp.Password)
                        </div>

                    </div>
                </div>
            </div>
            <div class="border-top text-right pt-2">
                <a class="btn btn-primary" href="@Url.Action("Show","Distributors")">Back</a>
                <button type="button" id="createButton" class="btn btn-warning">Add Distributor</button>
            </div>


        }


    </div>
    <script>
        $(document).ready(function () {
            $(function () {
                $('#createButton').attr('disabled', 'disabled');
            });
            $('input[type=text],input[type=text],input[type=text],input[type=text]').keyup(function () {
                if ($('form').valid()) {
                    $('#createButton').removeAttr('disabled');
                }
                else {
                    $('#createButton').attr('disabled', 'disabled');
                }
            });
        });
    </script>

</body>
</html>

