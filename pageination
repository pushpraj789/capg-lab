<script type="text/javascript">
    $(document).ready(function () {
       
        $("#btnGetdata").click(
            function () {
                //var supplier = new Object();
                //supplier.SupplierID = $("#SupplierID").val();
                $.ajax({
                    url: 'api/suppliers',
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        console.log(data);
                        var $table = $('<table />').addClass('dataTable table table-bordered table-striped');
                        $table.attr('id', 'table1');
                        var $header = $('<thead />').html('<tr><th>SupplierName</th><th>SupplierMobile</th><th>Email</th><th>CreationDateTime Date</th><th>LastModifiedDateTime</th></tr>');
                        $table.append($header);
                        $.each(data, function (i, val) {
                            var $row = $('<tr />');
                            // $row.append($('<td />').html(val.RawMaterialID));
                            $row.append($('<td />').html(val.SupplierName));
                            $row.append($('<td />').html(val.SupplierMobile));
                            $row.append($('<td />').html(val.Email));
                            $row.append($('<td />').html(val.CreationDateTime));
                            $row.append($('<td />').html(val.LastModifiedDateTime));
                            $table.append($row);
                        });
                        $('#updatepanel').html($table);
                        $('#table1').DataTable();

                    },
                    error: function () {
                        alert('Error!');
                    }
                });
            });
    });

</script>
